<body>

    <div class="calculator">
        <div class="header">
            <span class="brand">Onyx Calc</span>
            <div class="theme-toggle" onclick="toggleTheme()">✨</div>
        </div>

        <div class="screen">
            <div id="history"></div>
            <input type="text" id="display" readonly placeholder="0">
        </div>

        <div class="buttons-grid">
            <button class="btn-action" onclick="clearDisplay()">C</button>
            <button class="btn-action" onclick="deleteLastChar()">DEL</button>
            <button class="btn-operator" onclick="appendToDisplay('%')">%</button>
            <button class="btn-operator" onclick="appendToDisplay('/')">÷</button>

            <button onclick="appendToDisplay('7')">7</button>
            <button onclick="appendToDisplay('8')">8</button>
            <button onclick="appendToDisplay('9')">9</button>
            <button class="btn-operator" onclick="appendToDisplay('*')">×</button>

            <button onclick="appendToDisplay('4')">4</button>
            <button onclick="appendToDisplay('5')">5</button>
            <button onclick="appendToDisplay('6')">6</button>
            <button class="btn-operator" onclick="appendToDisplay('-')">−</button>

            <button onclick="appendToDisplay('1')">1</button>
            <button onclick="appendToDisplay('2')">2</button>
            <button onclick="appendToDisplay('3')">3</button>
            <button class="btn-operator" onclick="appendToDisplay('+')">+</button>

            <button onclick="appendToDisplay('.')">.</button>
            <button onclick="appendToDisplay('0')">0</button>
            <button class="btn-equals" onclick="calculateResult()">=</button>
        </div>
    </div>

    <script>
        const display = document.getElementById('display');
        const history = document.getElementById('history');
        let currentExpression = "";

        // Function to toggle between Dark and Light mode
        function toggleTheme() {
            document.body.classList.toggle('light-mode');
        }

        function appendToDisplay(val) {
            let uiVal = val;
            let mathVal = val;

            if (val === '*') { uiVal = '×'; }
            if (val === '/') { uiVal = '÷'; }
            if (val === '-') { uiVal = '−'; }

            // Prevent double decimals
            if (val === '.' && display.value.includes('.') && !/[+\-*/]/.test(display.value)) return;

            display.value += uiVal;
            currentExpression += mathVal;
        }

        function clearDisplay() {
            display.value = '';
            currentExpression = '';
            history.innerText = '';
        }

        function deleteLastChar() {
            display.value = display.value.slice(0, -1);
            currentExpression = currentExpression.slice(0, -1);
        }

        function calculateResult() {
            try {
                if (!currentExpression) return;
                
                // Handle Percentage (e.g., 50% -> 0.5)
                let evalString = currentExpression.replace(/(\d+)%/g, '($1/100)');
                
                history.innerText = display.value;
                
                // Calculate
                let result = eval(evalString);
                
                // Clean up the number (remove long decimals)
                if (!Number.isInteger(result)) {
                    result = parseFloat(result.toFixed(4));
                }

                display.value = result;
                currentExpression = result.toString();
            } catch (e) {
                display.value = "Error";
                setTimeout(clearDisplay, 1000);
            }
        }
        
        // Keyboard Support
        document.addEventListener('keydown', (e) => {
            if (/[0-9]/.test(e.key)) appendToDisplay(e.key);
            if (['+','-','*','/','%','.'].includes(e.key)) appendToDisplay(e.key);
            if (e.key === 'Enter') calculateResult();
            if (e.key === 'Backspace') deleteLastChar();
            if (e.key === 'Escape') clearDisplay();
        });
    </script>
</body>
